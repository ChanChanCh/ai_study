import java.util.Collections;

public class Ex00 {

	public static void main(String[] args) {
		
		
		int[] array = {1,2,7,10,11};
		
		int a =	((array.length - 1) / 2);
		
		System.out.println(a);
		
		Arrays.sort(array);
		
		System.out.println(array[(array.length - 1) / 2]);

	}

}
